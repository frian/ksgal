{% extends 'base.html.twig' %}

{% block body %}

<header>
    <span class="navigation">
        <a class="tip" href="{{ path('gallery_index') }}" title="back : keyboard b">&lt;</a>
    </span>
</header>

<div class="push"></div>

<div class="index">

{{ form_start(form) }}

    <div class="itemTitle">
        contact
    </div>
    <div>
        <div class="error">
            {{ form_errors(form.name) }}
        </div>
        {{ form_widget(form.name) }}
    </div>
    <div>
        <div class="error">
            {{ form_errors(form.email) }}
        </div>
        {{ form_widget(form.email) }}
    </div>
    <div>
        <div class="error">
            {{ form_errors(form.message) }}
        </div>
        {{ form_widget(form.message) }}
    </div>

    {# Render CSRF token etc .#}
    <div style="display:none">
        {{ form_rest(form) }}
    </div>

    <input type="submit" value="Submit">

{{ form_end(form) }}
</div>

{% endblock %}
