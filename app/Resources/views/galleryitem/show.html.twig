{% extends 'base.html.twig' %}

{% block my_js %}
<script src="/js/script.js"></script>
{% endblock %}

{% block my_tags %}
<meta name="twitter:card"  content="photo" />
<meta name="twitter:site"  content="@upchchsupport" />
<meta name="twitter:title" content="{{ galleryItem.gallery }} / {{ galleryItem.name }}" />
<meta name="twitter:image" content="{{ app.request.schemeAndHttpHost }}/{{ imgPath }}/{{ galleryItem.gallery }}/{{ galleryItem.image }}" />

<meta property="og:image"  content="{{ app.request.schemeAndHttpHost }}/{{ imgPath }}/{{ galleryItem.gallery }}/{{ galleryItem.image }}" />
{% endblock %}



{% block body %}

<img  id="bg" src="/{{ imgPath }}/{{ galleryItem.gallery }}/{{ galleryItem.bgImage }}" >

<header>
	<span class="navigation">
    	<a href="{{ path('gallery_show_content', {'name': galleryItem.gallery}) }}">&lt;</a>
    </span>
	<span class="serie show-for-medium">{{ galleryItem.gallery }}</span><span class="name">{{ galleryItem.name }}</span>
</header>

<div class="table text-center">
	<div class="tableCell vertMiddle">

		<div id="imageWrapper">
			<img src="/{{ imgPath }}/{{ galleryItem.gallery }}/{{ galleryItem.image }}">
		</div>

	</div>
</div>

<footer>
	{{ galleryItem.dimensions }} / {{ galleryItem.techniques }}
	<div class="socialButtons">
	    {{ include('default/_social.html.twig') }}
	</div>

</footer>



<div id="prev">
    {% if previous is not empty %}
    <a href="/galleryitem/{{ galleryItem.gallery }}/{{ previous }}"></a>
    {% endif %}
</div>
<div id="next">
    {% if next is not empty %}
    <a href="/galleryitem/{{ galleryItem.gallery }}/{{ next }}"></a>
    {% endif %}
</div>
{% endblock %}
