{% extends 'base.html.twig' %}

{% block body %}
<header>
	<span class="serie">Gallery items list</span>
</header>
<div class="index">
    <table>
        <tbody>
        {% for galleryItem in galleryItems %}
            <tr>
                <td><a href="{{ path('galleryitem_show', { 'id': galleryItem.id }) }}">{{ galleryItem.id }}</a></td>
                <td>{{ galleryItem.name }}</td>
                <td>{{ galleryItem.dimensions }}</td>
                <td>{{ galleryItem.techniques }}</td>
{#                 <td>{{ galleryItem.image }}</td>#}
{#                 <td>{{ galleryItem.bgimage }}</td>#}
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('galleryitem_show', { 'id': galleryItem.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('galleryitem_edit', { 'id': galleryItem.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="myButton" href="{{ path('galleryitem_new') }}">Create a new entry</a>
        </li>
    </ul>
</div>
{% endblock %}
