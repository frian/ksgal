{% extends 'base.html.twig' %}

{% block body %}

<header class="admin">
    <span class="navigation">
    	<a href="{{ path('admin_homepage') }}">&lt;</a>
    </span>
    <span class="name">{{ name }}</span>
    {{ include('admin/default/_logout.html.twig') }}
</header>

<div class="push"></div>

<div class="index">
	{% for item in galleryItems %}

	<div class="galleryIndexWrapper">
    	<a class="itemTitle" href="/galleryitem/{{ item.gallery }}/{{ loop.index }}">
    		{{ item.name }}
    	</a>
    	<div class="text-center">
    		<a href="/admin/galleryitem/{{ item.id }}/edit">
	    		<img class="preview" src="/{{ imgPath }}/{{ name }}/{{ item.image }}">
	    	</a>
    	</div>
	</div>

	{% endfor %}
</div>

{% endblock %}
